<label>Your message</label>
<textarea class='text'><%= model.get('text') %></textarea>

<label>Recipient's options</label>
<ol class='choices'>
<% model.get('choice_endpoints').each(function(choice) { %>
  <li
   class='choice'
   data-endpoint-id="<%= choice.get('uuid') %>">
   <input type='text' value="<%= choice.get('label') %>">
   <button class='close remove'>x</button>
  </li>
<% }); %>
</ol>

<a class='btn btn-primary new-choice'>Add another answer</a>
